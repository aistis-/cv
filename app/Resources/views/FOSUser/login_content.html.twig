{% trans_default_domain 'FOSUserBundle' %}

<div class="container">

    <h2>Malonu Tave vėl matyti!</h2>
    <p>Įvesk savo prisijungimo duomenis:</p>

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form class="form-group" action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
        {% endif %}

        <label for="username">EL. PAŠTAS</label>
        <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}"
               required="required"/>

        <label for="password">SLAPTAŽODIS</label>
        <input class="form-control" type="password" id="password" name="_password" required="required"/>

        <input class="checkbox" type="checkbox" id="remember_me" name="_remember_me" value="on"/>
        <label for="remember_me">Prisiminti</label>
        <br>
        <input type="submit" class="btn btn-info" id="_submit" name="_submit"
               value="Prisijunk"/>
    </form>

</div>