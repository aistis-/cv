<div class="container">

    <div class="col-md-8 col-md-offset-2 form-container">
        <a href="#" class="pull-right">Gįžti atgal</a>
        <h3 class="form-title">Redaguoti profilį</h3>

        {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}

            {{ form_row(form.name) }}

            {{ form_row(form.surname) }}

            {{ form_row(form.phone) }}

            <label for="form.imageFile">{{ app.user.photo ? 'Pakeisti nuotrauką' : 'Įkelti nuotrauką' }}</label>
            {% if app.user.photo %}
                <img class="img-responsive profile-img" src="{{ asset('img/profiles/')~app.user.photo}}" alt="Nuotrauka">
            {% endif %}
            {{ form_row(form.imageFile) }}

            {{ form_row(form.birthday) }}

            {{ form_row(form.city) }}

            {{ form_row(form.profession) }}

            <div class="form-group">
                <label>Gebėjimai</label>
                <div class="added-skills"></div>
                <a class="add-skills-btn" data-popup-open="popup-1" href="#">Pridėti gebėjimus</a>
            </div>

            {{ form_row(form.introduction) }}

            <div class="text-center">
                <input type="submit" class="btn btn-primary" value="Redaguoti"/>
            </div>

        {{ form_end(form) }}

        <p class="pull-right">* Laukai turi būti užpildyti</p>
    </div>

    <div class="popup" data-popup="popup-1">
        <div class="popup-inner">
            <h4>Gebėjimai</h4>
            <div class="skill-input-container">
                <input class="form-control skills-input" type="text" placeholder="Koks tavo gebėjimas?"/>
                <input class="user-id" type="hidden" value="{{ app.user.id }}"/>
                <button class="btn btn-primary add-skill">Pridėk</button>
            </div>
            <div class="added-skills"></div>
            <a class="popup-close" data-popup-close="popup-1" href="#">x</a>
        </div>
    </div>

</div>
