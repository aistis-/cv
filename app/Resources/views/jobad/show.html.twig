{% extends 'base.html.twig' %}

{% block body %}
    <h1>Skelbimas</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ jobAd.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ jobAd.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ jobAd.description }}</td>
            </tr>
            <tr>
                <th>Assignment</th>
                <td>{{ jobAd.assignment }}</td>
            </tr>
            <tr>
                <th>Requirements</th>
                <td>{% if jobAd.requirements %}{{ jobAd.requirements|join(', ') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('jobad_my_index') }}">Atgal į sąrašą</a>
        </li>
        <li>
            <a href="{{ path('jobad_edit', { 'id': jobAd.id }) }}">Redaguoti</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Trinti">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
